        <label >Titulo</label>
        <input type="text" class="form-control" name="titulo" value="<%= publicacao.titulo %>" placeholder="Insira uma Titulo">
    </div>      
    
    <div class="form-group">
        <label for="">Conte√∫do</label>
        <textarea class="form-control" name="conteudo"><%= publicacao.conteudo %></textarea>
