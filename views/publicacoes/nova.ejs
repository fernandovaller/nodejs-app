
<%- include('../header') %>


<div class="row">
    <div class="col-sm-6">
        <h1>Cadastrar Publicação</h1>
    </div>
    
    <div class="col-sm-6 text-right">
        <a href="/publicacoes" class="btn btn-default" >Voltar</a>
    </div>
</div>
<hr>

<form action="/publicacoes/nova" method="POST">
    <div class="form-group">
        <label >Titulo</label>
        <input type="text" class="form-control" name="titulo" placeholder="Insira uma Titulo">
    </div>      

    <div class="form-group">
        <label for="">Categoria</label>
        <select name="categoria" class="form-control">
            <% categorias.forEach( categoria => { %>
            <option value="<%= categoria.id %>"><%= categoria.categoria %></option>
            <% }) %>
        </select>        
    </div>      
    <div class="form-group">
        <label for="">Conteúdo</label>
        <textarea class="form-control" name="conteudo"></textarea>
    </div>    
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>