<%- include('../header') %>

<div class="row">
    <div class="col-sm-6">
            <h1>Publições</h1>
    </div>
    <div class="col-sm-6 text-right">
            <a href="/publicacoes/nova" class="btn btn-primary" >Cadastar</a>
    </div>
</div>

<hr>


<table class="table table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Publicação</th>
            <th width="200" >Ações</th>
        </tr>
    </thead>
    <tbody>

<% publicacoes.forEach(publicacao => { %>
    <tr>
        <td><%= publicacao.id %></td>
        <td><%= publicacao.titulo %></td>
        <td>
            <a href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>" class="btn btn-info btn-sm" >Editar</a>
            <a href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>" class="btn btn-danger btn-sm" >Excluir</a>
        </td>
    </tr>
<% }) %>

</tbody>
</table>

<%- include('../footer') %>
