<%- include('../header') %>

<div class="row">
    <div class="col-sm-6">
            <h1>Categorias</h1>
    </div>
    <div class="col-sm-6 text-right">
            <a href="/categorias/nova" class="btn btn-primary" >Cadastar Categoria</a>
            <a href="/publicacoes/nova" class="btn btn-primary" >Cadastar Publicações</a>
    </div>
</div>

<hr>


<table class="table table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th width="100">ID</th>
            <th>Categorias</th>
            <th width="100">Publicações</th>
            <th width="150" >Ações</th>
        </tr>
    </thead>
    <tbody>

<% categorias.forEach(categoria => { %>
    <tr>
        <td><%= categoria.id %></td>
        <td><%= categoria.categoria %></td>
        <td><a href="/publicacoes/categoria/<%= categoria.id %>" class="btn btn-info btn-sm" >Publicações</a></td>
        <td>            
            <a href="/categorias/editar/<%= categoria.id %>" class="btn btn-info btn-sm" >Editar</a>
            <a href="/categorias/excluir/<%= categoria.id %>" class="btn btn-danger btn-sm" >Excluir</a>
        </td>
    </tr>
<% }) %>

</tbody>
</table>

<%- include('../footer') %>
